<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
      android:id="@+id/user_settings_view"
      style="@style/CardStyle">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.atakmap.android.pulsetool.plugin.ui.settings.RequiredUserSettingsView
          android:id="@+id/primay_user_settings"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />

        <com.atakmap.android.pulsetool.plugin.ui.settings.GeneralUserSettingsView
          android:id="@+id/general_user_settings"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/unit_settings_view"
      style="@style/CardStyle">

      <com.atakmap.android.pulsetool.plugin.ui.settings.UnitSettingsView
        android:id="@+id/unit_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/screen_settings_view"
      style="@style/CardStyle">

      <com.atakmap.android.pulsetool.plugin.ui.settings.ScreenSettingsView
        android:id="@+id/screen_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/device_settings_view"
      style="@style/CardStyle">

      <com.atakmap.android.pulsetool.plugin.ui.settings.DeviceSettingsView
        android:id="@+id/device_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/notification_settings_view"
      style="@style/CardStyle">

      <com.atakmap.android.pulsetool.plugin.ui.settings.SendNotificationView
        android:id="@+id/notification_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:id="@+id/logging_settings_view"
      style="@style/CardStyle"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    </androidx.cardview.widget.CardView>
  </LinearLayout>
</ScrollView>