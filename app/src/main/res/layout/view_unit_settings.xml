<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

  <TextView
    android:id="@+id/config_unit_settings_header"
    style="@style/CardHeadingStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/unit_settings" />

  <com.atakmap.android.pulsetool.plugin.ui.settings.widget.SettingsSpinner
    android:id="@+id/config_date_format"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/medium_vertical_margin" />


  <com.atakmap.android.pulsetool.plugin.ui.settings.widget.SettingsSpinner
    android:id="@+id/config_time_format"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/medium_vertical_margin" />

  <com.atakmap.android.pulsetool.plugin.ui.settings.widget.SettingsSpinner
    android:id="@+id/config_unit_system"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/medium_vertical_margin" />
</LinearLayout>